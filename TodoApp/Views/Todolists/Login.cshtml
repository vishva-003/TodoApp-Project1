<style>
    .backround{
        
        background-size:cover;
        margin:2px;
        padding:5px;
        width:100%;
        height:600px;
        align-content:center;
        align-items:center;
    }

    .innercont{
        background-color:aliceblue;
        width:80%;
        padding:30px;
        align-content:center;
        align-items:center;
        border-radius:40px;
        position:center;
        margin-left:10%;
        border:20px;
        border-color:black;
        height:500px;
        text-align: center;
    }

    .innercont h1{

        margin:20px;
        color:darkblue;
        text-align:center;
    }

        .innercont label {
           text-align:left;
           padding:10px;
           font-weight:700;font-size:20px;
        }

        .innercont input {
            text-align: left;
            font-weight: 500;
            font-size: 20px;
            width:80%;
            height:50px;
            border-color:black;
            border-radius:10px;
        }

        .innercont button {
            background-color:darkblue;
            color:white;
            width:150px;
            height:30px;
            border:none;
            border-radius:10px;
           }
           .text{
               font-size:20px;
               padding:10px;
           }
</style>

<div class="backround">
    


    <div Class="innercont">
        <h1>Login</h1>

        <label>Enter your Email</label>
        <br />
        <input id="Email" name="Email" type="email" placeholder="Enter your Email" />
        <br />
        <br />

        <label>Enter your Password</label>
        <br />
        <input id="Password" name="Password" type="Password" placeholder="Enter your Password" />
        <br />
        <br />
        <button id="submit" name="submit">Log in</button>
        <div class="text">
            <p>You dont have any account . please  <a asp-action="Register">Sign in</a> </p>
        </div>
    </div>

</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $('#submit').click(function()
        {
            debugger;
            var Email=$('#Email').val();
            var Password=$('#Password').val();

        $.ajax(
            {
            type:'POST',
            url:'/Todolists/Todocheck',
            contentType:'application/json',

             data:JSON.stringify({

                Email:Email,
                Password:Password,
            }),
             success:function(response){
                      if (response.success) {
            window.location.href = response.redirectUrl;
        } else {
            alert(response.message);
        }

                },
                 error: function(){
                alert('Error occured');}
        });
        });
    </script>
   
}
